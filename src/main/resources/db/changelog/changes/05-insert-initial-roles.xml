<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="5-insert-initial-roles" author="ostap">
    <comment>Insert initial role definitions</comment>
    <insert tableName="role">
      <column name="code" value="ADMIN"/>
      <column name="name" value="Administrator"/>
      <column name="description" value="Full access: create, edit, moderate, delete"/>
    </insert>
    <insert tableName="role">
      <column name="code" value="USER"/>
      <column name="name" value="Regular User"/>
      <column name="description" value="Can create and manage own advertisements"/>
    </insert>
    <insert tableName="role">
      <column name="code" value="MODERATOR"/>
      <column name="name" value="Moderator"/>
      <column name="description" value="Can view and moderate user content"/>
    </insert>
  </changeSet>

</databaseChangeLog>
