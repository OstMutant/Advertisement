<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="6-migrate-to-enum-role" author="ostap">
    <!-- 1. Add column as nullable -->
    <addColumn tableName="user_information">
      <column name="role" type="VARCHAR(50)"/>
    </addColumn>

    <!-- 2. Fill default value -->
    <update tableName="user_information">
      <column name="role" value="USER"/>
      <where>role IS NULL</where>
    </update>

    <!-- 3. Make column NOT NULL -->
    <addNotNullConstraint tableName="user_information" columnName="role" columnDataType="VARCHAR(50)"/>

    <!-- 4. Drop foreign key and old column -->
    <dropForeignKeyConstraint baseTableName="user_information" constraintName="fk_user_role"/>
    <dropColumn tableName="user_information" columnName="role_id"/>

    <!-- 5. Drop role table -->
    <dropTable tableName="role"/>
  </changeSet>
</databaseChangeLog>
